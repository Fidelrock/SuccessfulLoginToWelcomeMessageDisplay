<Window x:Class="SuccessfulLoginToWelcomeMessageDisplay.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuccessfulLoginToWelcomeMessageDisplay"
        mc:Ignorable="d"
          Title="Login" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Name="txtUser" Margin="10"
                     local:WatermarkHelper.Watermark="Username" />
            <PasswordBox Name="txtPassword" Margin="10" />
            <Button Name="btnLogin" Content="Login" Click="btnLogin_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
